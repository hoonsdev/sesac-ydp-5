<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- Axios CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      .btn1 {
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <h1>동적 폼 실습</h1>
    <hr />
    <h2>실습1. axios get 회원가입</h2>
    <form name="register">
      <label for="username">이름</label>
      <input type="text" name="username" id="username" required />
      <br />

      <fieldset>
        <legend>성별</legend>
        <input type="radio" name="gender" id="male" value="male" checked />
        <label for="male">남자</label>
        <input type="radio" name="gender" id="female" value="female" />
        <label for="female">여자</label>
      </fieldset>
      <br />

      <fieldset>
        <legend>생년월일</legend>
        <select name="birthYear" id="year">
          <% for (let i = 0; i < 50; i++) { %>
          <option value="<%= 2010 - i %>"><%= 2010 - i %></option>
          <% } %>
        </select>
        <label for="year">년</label>
        <select name="birthMonth" id="month">
          <% for (let i = 1; i < 13; i++) { %>
          <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>
        <label for="month">월</label>
        <select name="birthDay" id="day">
          <% for (let i = 1; i < 32; i++) { %>
          <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>
        <label for="day">일</label>
      </fieldset>
      <br />

      <fieldset>
        <legend>관심사</legend>
        <input type="checkbox" name="hobby" id="travel" value="travel" />
        <label for="travel">여행</label>
        <input type="checkbox" name="hobby" id="fashion" value="fashion" />
        <label for="fashion">패션</label>
        <input type="checkbox" name="hobby" id="food" value="food" />
        <label for="food">음식</label>
      </fieldset>

      <button type="button" onClick="axiosGetRegister()">회원가입</button>
    </form>

    <div class="result1"></div>
    <hr />
    <h2>실습2. axios post 로그인</h2>
    <form name="login">
      <label for="id">아이디 </label><input type="text" id="id" name="id" />
      <label for="pw">비밀번호 </label
      ><input type="password" id="pw" name="pw" />
      <button type="button" onClick="axiosPostLogin()">로그인</button>
    </form>
    <div class="result2"></div>

    <script>
      function axiosGetRegister() {
        const resultBox = document.querySelector('.result1');
        const form = document.forms['register'];
        const hobbies = [];
        form.hobby.forEach((el) => {
          if (el.checked) {
            hobbies.push(el.value); // el.value를 추가해줘야 함!
            // 블로깅 잘 해보기!!!!
          }
        });
        console.log(hobbies);
        // hobbies 배열은 form.hobby를 반복하는 각 요소에 대해 checked 속성 값이 참인 것만 새로 저장
        const data = {
          name: form.username.value,
          gender: form.gender.value,
          birthYear: form.birthYear.value,
          birthMonth: form.birthMonth.value,
          birthDay: form.birthDay.value,
          hobby: hobbies,
        };

        axios({
          method: 'get',
          url: '/axios',
          params: data,
        }).then(function (response) {
          console.log(response.data);
          const { name, gender, birthYear, birthMonth, birthDay, hobby } =
            response.data;
          if (!name) {
            resultBox.innerHTML = response.data;
          } else {
            resultBox.innerHTML = `${name}님 환영합니다! 가입이 완료되었습니다.
            ${gender} 이시네요! 생년월일은 ${birthYear}년 ${birthMonth}월 ${birthDay}이시군요!
            ${hobby} 에 관심이 있으시네요!
            `;
          }
        });
      }

      function axiosPostLogin() {
        const resultBox = document.querySelector('.result2');
        const form = document.forms['login'];
        const data = {
          id: form.id.value,
          pw: form.pw.value,
        };

        axios({
          method: 'post',
          url: '/axios',
          data: data,
        }).then(function (response) {
          console.log(response);
          if (response.data.id) {
            resultBox.innerHTML = `${response.data.id}님! 로그인 성공`;
            resultBox.style.color = 'blue';
          } else {
            resultBox.innerHTML = `${response.data}`;
            resultBox.style.color = 'red';
          }
        });
      }
    </script>
  </body>
</html>
